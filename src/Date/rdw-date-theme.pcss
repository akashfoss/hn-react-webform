@import '../styles/_variables.pcss';

.input-wrapper {
  position: relative;
}

.display-inline {
  width: calc(var(--inputWidth) + 20px);
  padding-right: 20px;

  @media (min-width: 768px) {
    display: inline-block;
    float: left;
  }
}

.display-before {
  width: calc(var(--inputWidth) + 20px);
  padding-right: 20px;

  @media (min-width: 768px) {
    width: calc(50% + var(--inputWidth) + 20px);
  }
}

/* Validation icon */

.validation-icon {
  display: inline-block;
  width: calc(var(--spacingUnit) / 1.5);
  height: calc(var(--spacingUnit) / 1.5);
  margin-left: calc(var(--spacingUnit) / 1.5);
  position: absolute;
  top: 10px;
  right: 0;

  &.validate-success {
    &::after {
      content: '';
      display: block;
      width: 60%;
      height: 100%;
      border-bottom: 2px solid var(--successColor);
      border-right: 2px solid var(--successColor);
      transform: rotate(45deg) translateY(-4px);
    }
  }
}

.overlay-wrapper {
  position: relative;
}

.overlay {
  position: absolute;
  left: 0;
  top: 5px;
  background: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
  z-index: 1;
}

/* Navigation */
:global .DayPicker-Month {
  font-weight: bold;
}

:global .DayPicker-Weekday {
  color: #757575;
  font-size: 0.8em;
}

/* Days */
:global .DayPicker-Day {
  font-weight: normal;
  transition: background-color 350ms ease;
}

/* Enabled days */
:global .DayPicker-Day:not(.DayPicker-Day--disabled):not(.DayPicker-Day--outside) {
  color: var(--baseColor);

  &:hover {
    background-color: #e4e7e7;
  }
}

/* Disabled days */

/* :global .DayPicker-Day.DayPicker-Day--outside {
  color: purple;
} */

:global .DayPicker-Day--disabled {
  &:hover {
    background-color: #fff;
  }
}

/* Today */
:global .DayPicker-Day--today {
  font-weight: bold;
  color: var(--baseColor);
}

/* Selected day */
:global .DayPicker-Day--selected:not(.DayPicker-Day--disabled):not(.DayPicker-Day--outside) {
  color: var(--buttonTextColor);
  background-color: var(--buttonColor);
}

/* DayPicker default styles + selector example. prefix with :global before use */

