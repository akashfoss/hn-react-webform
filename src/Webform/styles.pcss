@import '../styles/_variables.pcss';

.webform {
  font-family: var(--primaryFont);
  max-width: var(--formMaxWidth);
  color: var(--baseColor);
  margin: var(--formMargin);
}

.list {
  padding-left: 0;
  margin-bottom: 2em;
}

.list-item {
  list-style: none outside none;
}

.element {
  font-size: 10px;

  &.error {
    font-size: 16px;
    color: #fff;
  }
}

.formtitle {
  margin: 0 0 calc(var(--spacingUnit) / 2) 0;
}
