@import '../styles/_variables.pcss';

/* Field Wrapper */

.formrow {
  margin-bottom: var(--spacingUnit);

  &.hidden {
    display: none;
  }
}

fieldset.formrow {
  /* only formrow overrides for fieldset */
  border: none;
}

.formrow {
  &::after {
    content: '';
    display: block;
    clear: both;
  }
}

.label {
  display: inline-block;
  width: 100%;
  padding-left: 0; /* legend */
  margin-bottom: calc(var(--spacingUnit) / 2);
  vertical-align: top;
  line-height: var(--inputHeight);

  @media (min-width: 768px) {
    float: left;
    width: var(--inlineLabelWidth);
    padding-right: calc(var(--spacingUnit) / 2);
  }

  &.label-display-invisible {
    display: none;
  }

  &.label-display-before {
    display: block;
    float: none;
    width: 100%;
  }
}

.required-marker {
  color: var(--requiredColor);
  font-size: 0.8em;
  vertical-align: top;
}

/* Validation wrapper */

.validation-message-wrapper {
  margin: 0;
  padding: 0;
}

/* Field Description */

.description-before,
.description-after {
  display: block;
}

.description-before {
  margin-bottom: calc(var(--spacingUnit) / 2);
  line-height: 1.5;
}

.description-after,
.validation-message-wrapper {
  font-size: 0.8em;
  margin-top: 0;
  padding-bottom: calc(var(--spacingUnit) / 2);
  line-height: 1.2em;
  clear: both;

  &.label-display-inline {
    @media (min-width: 768px) {
      padding-left: calc(var(--spacingUnit) / 2);
      margin-left: var(--inlineLabelWidth);
      float: left;
    }
  }
}

/* Prefix & Suffix */
.field-prefix,
.field-suffix {
  display: inline-block;
}

.field-prefix {
  margin-right: 5px;
}

.field-suffix {
  margin-left: 5px;
}
